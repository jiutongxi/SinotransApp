<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arrivebackground"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00" >

        <ImageButton
            android:id="@+id/arrivereturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yundihome" />

        <ImageButton
            android:id="@+id/arriveshow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_weight="1"
            android:background="@drawable/yundi" />

        <ImageButton
            android:id="@+id/arrivephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yundipaizhao" />

        <ImageButton
            android:id="@+id/arrivescan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yundisaomiao" />

        <ImageButton
            android:id="@+id/arrivesave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yundibaocun" />
    </LinearLayout>

    <TextView
        android:id="@+id/arrivewelcode"
      android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/arrivedonu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="订单ID"
            android:inputType="text|number"
            android:textColor="#000000" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <ListView
        android:id="@+id/arrivedodetail"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

    </ListView>

   

    <ImageView
        android:id="@+id/arrive_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.31" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_weight="0.20" >

    </LinearLayout>

</LinearLayout>